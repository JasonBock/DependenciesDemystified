  <ItemGroup>
    <ProjectReference Include="..\DependenciesDemystified.Core\DependenciesDemystified.Core.csproj" />
  </ItemGroup>

  <ItemGroup>
    <None Update="autofac.json">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </None>
  </ItemGroup>

</Project>
